{
  "name": "fantasy-oscars",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^17.0.0",
    "markdownlint": "^0.34.0",
    "markdownlint-cli2": "^0.14.0",
    "remark-cli": "^12.0.0",
    "remark-validate-links": "^13.0.1"
  },
  "scripts": {
    "ci": "npm run format:check && npm run lint && npm run typecheck && npm test && npm run build",
    "dev": "npm run --workspaces --if-present dev",
    "build": "npm run build --workspace @fantasy-oscars/shared && npm run build --workspace @fantasy-oscars/api && npm run build --workspace @fantasy-oscars/web",
    "test": "npm run --workspaces --if-present test",
    "test:watch": "npm run --workspaces --if-present test:watch",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "lint": "npm run --workspaces --if-present lint",
    "format": "npm run --workspaces --if-present format",
    "docs:lint": "markdownlint-cli2 README.md docs/**/*.md",
    "docs:links": "remark --color README.md docs --use remark-validate-links --quiet --frail",
    "docs:check": "FORCE_COLOR=1 npm run docs:lint && FORCE_COLOR=1 npm run docs:links",
    "ci:all": "npm run ci && npm run docs:check",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down -v",
    "ticket:comment": "node .github/scripts/comment-ticket.mjs",
    "ticket:status": "node .github/scripts/ticket-status.mjs",
    "ticket:pull": "node .github/scripts/ticket-pull.mjs",
    "ticket:create": "node .github/scripts/ticket-create.mjs",
    "ticket:sync": "node .github/scripts/ticket-sync.mjs",
    "ticket:deps": "node .github/scripts/ticket-deps.mjs",
    "test:scripts": "node --test .github/scripts/lib/*.test.mjs",
    "lint:scripts": "eslint .github/scripts",
    "format:check": "npm run --workspaces --if-present format:check"
  }
}
