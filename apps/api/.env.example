# Local dev / docker-compose Postgres
PORT=4010
AUTH_SECRET=local-dev-secret
DATABASE_URL=postgres://fantasy:fantasy@localhost:5433/fantasy_oscars

# CORS for Vite dev server
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Realtime websockets (optional)
REALTIME_ENABLED=true

# TMDB (optional; used to hydrate films/people by tmdb_id)
# Create a v4 "Read access token" in TMDB and set it here.
# Used by: `syncTmdbMovieById` / `syncTmdbPersonById` and `tsx src/scripts/sync-tmdb.ts`
TMDB_READ_ACCESS_TOKEN=
