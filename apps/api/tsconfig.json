{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "rootDirs": ["src", "../../packages/shared/dist"],
    "paths": {
      "@fantasy-oscars/shared": ["../../packages/shared/dist/index.d.ts"],
      "@fantasy-oscars/shared/*": ["../../packages/shared/dist/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src", "../../packages/shared/dist/index.d.ts"],
  "references": [{ "path": "../../packages/shared/tsconfig.json" }]
}
