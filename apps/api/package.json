{
  "name": "@fantasy-oscars/api",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "tsc -b ../../packages/shared/tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "build": "tsc -b",
    "start": "node ../../.github/scripts/db-migrate.mjs && node dist/index.js",
    "nominees:load": "tsx src/scripts/load-nominees.ts --file ../../database/fixtures/golden-nominees.json",
    "test": "vitest run",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.test.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w . --ignore-path ../../.prettierignore",
    "format:check": "prettier -c . --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "@fantasy-oscars/shared": "file:../../packages/shared",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.11.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
